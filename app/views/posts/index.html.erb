<p id='notice'><%= notice %></p>

<h1>Posts</h1>

<%= link_to "New post", new_post_path %>
<br>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark"> 
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Status</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.created_at.strftime("%d/%H/%Y") %></td>
        <td><%= post.title %></td>
        <td><%= post.status %></td>
        <td><%= simple_format(post.content) %></td>

        <td><%= link_to 'Add', post, method: :create, class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Edit', post, method: :update, class: "btn btn-outline-secondary btn-sm" %></td>
          <td><%= link_to 'Delete', post, method: :destroy, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          
        
        
      </tr>
    <% end %>
  </tbody>
</table>

